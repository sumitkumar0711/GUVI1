x = []
y = []
a = 0
z = []
n = int(input("Enter the limit:"))
for i in range(0,n):
    x.append(int(input("Enter matrix value for x:")))
for i in range(0,n):
    y.append(int(input("Enter matrix value for y:")))
for i in range(0,n):
    a = x[i] + y[i]
    z.append(a)
for i in range (0,n):
    print(" ",z[i]," ",end = " ")
    if(i+1)% 3 == 0:
        print(" ")
